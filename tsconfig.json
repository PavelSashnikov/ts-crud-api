{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["ES6"],
    "module": "ES2022",
    "rootDirs": ["src"],
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
